{
  "name": "js-modules-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension that uses Parceljs to allow for ES6 modules in content scripts",
  "main": "index.js",
  "scripts": {
    "dev": "parcel popup.html --public-url ./ src/background.js src/github.js --out-dir extension/dist",
    "build": "parcel build popup.html --public-url ./ src/background.js src/github.js --out-dir extension/dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-mcgurrin/js-modules-chrome-extension.git"
  },
  "author": "David McGurrin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/david-mcgurrin/js-modules-chrome-extension/issues"
  },
  "homepage": "https://github.com/david-mcgurrin/js-modules-chrome-extension#readme",
  "dependencies": {
    "parcel-bundler": "^1.12.4"
  }
}
